{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "emitDeclarationOnly": true,
    "declarationDir": "./dist"
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
